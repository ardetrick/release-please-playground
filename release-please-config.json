{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "separate-pull-requests": false,
  "include-component-in-tag": true,
  "include-v-in-tag": true,
  "plugins": [
    "maven-workspace"
  ],
  "packages": {
    "release-please-playground-parent": {
      "path": "parent",
      "release-type": "maven",
      "component": "release-please-playground-parent"
    },
    "shared-lib": {
      "path": "shared-lib",
      "release-type": "maven",
      "component": "shared-lib"
    },
    "foo-application": {
      "path": "foo-application",
      "release-type": "maven",
      "component": "foo-application"
    }
  }
}
